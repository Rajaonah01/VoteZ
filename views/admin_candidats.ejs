<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Admin - Gestion des Candidats</title>
  <link rel="shortcut icon" href="/images/voter.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to right, #f8f9fa, #e0f7fa);
      min-height: 100vh;
      font-family: 'Roboto', sans-serif;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 40px;
      color: #333;
      font-weight: 700;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .card {
      border-radius: 20px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.15);
      padding: 20px;
      background-color: #fff;
    }

    .form-ajout input {
      border-radius: 12px;
      padding: 12px;
      font-size: 1rem;
      border: 1px solid #ccc;
      transition: all 0.3s;
    }

    .form-ajout input:focus {
      border-color: #00bcd4;
      box-shadow: 0 0 8px rgba(0,188,212,0.3);
      outline: none;
    }

    .form-ajout button {
      border-radius: 12px;
      font-weight: 600;
      transition: all 0.3s;
    }

    .form-ajout button:hover {
      background-color: #007c91;
      border-color: #007c91;
    }

    .table-container {
      overflow-x: auto;
      margin-top: 30px;
    }

    table th, table td {
      vertical-align: middle !important;
    }

    .btn-supprimer {
      background-color: #dc3545;
      color: #fff;
      border-radius: 10px;
      transition: all 0.3s;
    }

    .btn-supprimer:hover {
      background-color: #a71d2a;
      color: #fff;
    }

    .action-buttons a {
      margin-right: 10px;
    }

    @media (max-width: 768px) {
      h1 { font-size: 1.8rem; }
      .form-ajout input { font-size: 0.95rem; }
      .form-ajout button { font-size: 0.95rem; }
      table { font-size: 0.9rem; }
    }

    @media (max-width: 576px) {
      h1 { font-size: 1.5rem; }
      .btn { font-size: 0.85rem; }
      .form-ajout { padding: 15px; }
    }

    .nav-buttons {
      text-align: center;
      margin-top: 30px;
    }

    .nav-buttons a {
      margin: 5px;
      border-radius: 12px;
      font-weight: 500;
      padding: 10px 20px;
      transition: all 0.3s;
    }

    .nav-buttons a.btn-primary:hover {
      background-color: #007c91;
      border-color: #007c91;
    }

    .nav-buttons a.btn-danger:hover {
      background-color: #a71d2a;
      border-color: #a71d2a;
    }
  </style>
</head>
<body>

  <h1>Gestion des Candidats</h1>

  <!-- Formulaire ajout -->
  <div class="card form-ajout mx-auto">
    <h4 class="mb-4 text-center">Ajouter un candidat</h4>
    <form action="/admin/candidats/ajouter" method="POST" class="d-flex flex-column gap-3">
      <input type="text" name="nom" class="form-control" placeholder="Nom du candidat" required>
      <button type="submit" class="btn btn-success">Ajouter</button>
    </form>
  </div>

  <!-- Liste des candidats -->
  <div class="card table-container">
    <h4 class="mb-3 text-center">Candidats existants</h4>
    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Nom du candidat</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% candidats.forEach((c, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= c.nom %></td>
            <td>
              <form action="/admin/candidats/supprimer/<%= c.id %>" method="POST" onsubmit="return confirm('Voulez-vous vraiment supprimer ce candidat ?');" class="d-inline">
                <button type="submit" class="btn btn-supprimer">Supprimer</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Boutons navigation -->
  <div class="nav-buttons">
    <a href="/" class="btn btn-primary">Retour à l'accueil</a>
    <a href="/logout" class="btn btn-danger">Se déconnecter</a>
  </div>

</body>
</html>
